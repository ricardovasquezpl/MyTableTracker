<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.tabletracker.mytabletracker.activities.Main.MainActivity"
    android:weightSum="1"
    android:background="@color/colorPrimary">

    <FrameLayout
        android:id="@+id/fragment_menu"
        android:layout_width="90dp"
        android:layout_height="match_parent">

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/first_buttons">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal"
                    android:layout_alignTop="@+id/et_search"
                    android:layout_centerHorizontal="true">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:background="@drawable/button_layout_active"
                        android:textColor="@color/colorWhite"
                        android:layout_margin="2dp"
                        android:text="food"
                        android:textAllCaps="true"
                        android:textSize="12dp"/>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:background="@drawable/button_layout_inactive"
                        android:layout_margin="2dp"
                        android:paddingLeft="3dp"
                        android:paddingRight="3dp"
                        android:textColor="@color/colorGray"
                        android:text="drinks"
                        android:textAllCaps="true"
                        android:textSize="12dp"/>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:background="@drawable/button_layout_inactive"
                        android:layout_margin="2dp"
                        android:paddingLeft="3dp"
                        android:paddingRight="3dp"
                        android:text="wines"
                        android:textAllCaps="true"
                        android:textColor="@color/colorGray"
                        android:textSize="12dp"/>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:background="@drawable/button_layout_inactive"
                        android:layout_margin="2dp"
                        android:paddingLeft="3dp"
                        android:paddingRight="3dp"
                        android:textColor="@color/colorGray"
                        android:text="beverages"
                        android:textAllCaps="true"
                        android:textSize="12dp"/>

                </LinearLayout>

                <EditText
                    android:id="@+id/et_search"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/outline_edit_text"
                    android:drawablePadding="15dp"
                    android:drawableRight="@drawable/search_icon"
                    android:layout_centerVertical="true"
                    android:maxLines="1"
                    android:inputType="text"
                    android:layout_alignParentEnd="true" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:layout_below="@+id/first_buttons"
                android:id="@+id/linearLayout"
                android:layout_marginTop="5dp">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_layout_active"
                    android:textColor="@color/colorWhite"
                    android:layout_margin="2dp"
                    android:text="soup"
                    android:textAllCaps="true"
                    android:textSize="12dp"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_layout_inactive"
                    android:layout_margin="2dp"
                    android:text="salads"
                    android:textColor="@color/colorGray"
                    android:textAllCaps="true"
                    android:textSize="12dp"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="@drawable/button_layout_inactive"
                    android:layout_margin="2dp"
                    android:text="pizza"
                    android:textColor="@color/colorGray"
                    android:layout_weight="1"
                    android:textAllCaps="true"
                    android:textSize="12dp"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="@drawable/button_layout_inactive"
                    android:layout_margin="2dp"
                    android:text="entrees"
                    android:textColor="@color/colorGray"
                    android:layout_weight="1"
                    android:textAllCaps="true"
                    android:textSize="12dp"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_layout_inactive"
                    android:layout_margin="2dp"
                    android:text="appetizers"
                    android:textColor="@color/colorGray"
                    android:textAllCaps="true"
                    android:textSize="12dp"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_layout_inactive"
                    android:layout_margin="2dp"
                    android:textColor="@color/colorGray"
                    android:text="main course"
                    android:textAllCaps="true"
                    android:textSize="12dp"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="@drawable/button_layout_inactive"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:textColor="@color/colorGray"
                    android:textAllCaps="true"
                    android:text="organic"
                    android:textSize="12dp"/>

            </LinearLayout>

            <GridView xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/gridview"
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:numColumns="5"
                android:verticalSpacing="8dp"
                android:horizontalSpacing="20dp"
                android:stretchMode="columnWidth"
                android:gravity="center"
                android:layout_below="@+id/linearLayout" />

        </RelativeLayout>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/fragment_actions"
        android:layout_width="330dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="12dp"
        android:layout_height="match_parent">

    </FrameLayout>

</LinearLayout>
